<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TV_info_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#023E8C">
            <TextView
                android:id="@+id/bt_Salir_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_retroceso"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:backgroundTint="@color/white"></TextView>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="#023E8C"
                    android:text="Tablas de verdad"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/white">
                </TextView>
                <LinearLayout
                    android:padding="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Verdadero o falso."
                        android:textColor="@color/black"
                        android:textSize="23dp"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Para construir una tabla de verdad, primero se debe de analizar la cantidad de preposiciones y la cantidad de conectivos lógicos."
                        android:textColor="@color/black"
                        android:textSize="17dp">
                    </TextView>
                    <ImageView
                        android:padding="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tv_1"></ImageView>

                    <ImageView
                        android:padding="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tv_2"
                        android:layout_gravity="center"></ImageView>
                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Para comenzar a llenar la tabla, en la primera premisa se debe dividir el número total de filas entre 2."
                        android:textColor="@color/black"
                        android:textSize="17dp">
                    </TextView>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4/2=2"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Esto dice que las dos primeras deberán ser verdaderas y las otras dos deberán ser falsas."
                        android:textColor="@color/black"
                        android:textSize="17dp">
                    </TextView>
                    <ImageView
                        android:padding="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tv_3"
                        android:layout_gravity="center"></ImageView>
                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ahora se toma el resultado de la división anterior ¨2¨, y se vuelve a dividir entre 2."
                        android:textColor="@color/black"
                        android:textSize="17dp">
                    </TextView>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2/2=1"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Esto dice que los valores de ¨q¨ deberán ir alternando entre verdadero y falso, uno y uno."
                        android:textColor="@color/black"
                        android:textSize="17dp">
                    </TextView>
                    <ImageView
                        android:padding="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tv_5"
                        android:layout_gravity="center"></ImageView>
                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Para poder hacer la conjunción de p y q, donde esta sea verdadera, ambos valores de las comlumnas p y q deberán ser verdaderos. \n\nEn el caso de la negación de q, únicamente se le cambia el valor de la columna de q."
                        android:textColor="@color/black"
                        android:textSize="17dp">
                    </TextView>
                    <ImageView
                        android:padding="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tv_6"></ImageView>

                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Para realizar la proposición general, se debe hacer la disyunción de 𝑝 ∧ 𝑞 con ¬ 𝑞, en donde con una que sea verdadera, la disyunción será verdadera. \n\nDe esta forma se tiene completada la tabla"
                        android:textColor="@color/black"
                        android:textSize="17dp">
                    </TextView>
                    <ImageView
                        android:padding="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tv_7"
                        android:layout_gravity="center"></ImageView>
                    <TextView
                        android:id="@+id/bt_Ejercicios_TV"
                        android:layout_marginTop="80dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_btn"
                        android:text="IR A LA PRÁCTICA"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"></TextView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>